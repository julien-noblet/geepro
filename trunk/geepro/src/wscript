# -*- coding: utf-8 -*-
# src
def build(bld):
  print('â†’ building src')
  sources=[
    'error.cpp', 'intl.cpp',
    'chip.cpp', 'dummy.cpp', 'storings.cpp', 'buffer.cpp',
    'iface.cpp', 'files.cpp', 'parport.cpp', 'timer.cpp', 
    'protocols.cpp', 'script.cpp', 'checksum.cpp', 'cfp.cpp',
    'usb2lpt.cpp', 'gep_usb.cpp', 'serial.cpp', 'programmer.cpp'
  ]
  bld(
    features     = 'cxx', 
    source       = sources,
    includes     = '# ../intl',
    target       = 'maincode'
  )
  bld(
    features     = 'cxx', 
    source       = "main.cpp",
    includes     = '# ../intl',
    target       = 'main.o'
  )
